@model LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen
@{
    ViewBag.LoginView = true;
    ViewData["IsLoginPage"] = true;
}

@{
    ViewBag.Title = "Forgot Password";
}

<div class="flex w-full h-screen bg-white overflow-hidden">
    <div class="w-1/2 bg-[#4D7766] p-8 flex items-center justify-center">
        <img src="~/images/logo2.png"
             class="h-auto w-auto"
             alt="logo">
    </div>
    <div class="w-1/2 p-32 bg-[#ECE7E1] items-center justify-center">
        <div class="w-full max-w-md ml-12">
            <h2 class="text-3xl font-black text-[#4D7766] mb-6 text-center">Forgot Password</h2>
            <form method="post" action="/Account/ForgotPassword" id="forgotPasswordForm" class="space-y-6">
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" id="email" name="email" required
                           class="mt-1 w-full px-2 py-2 border-2 border-gray-400 bg-transparent rounded-md">
                </div>
                <div>
                    <label for="newPassword" class="block text-sm font-medium text-gray-700">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" required
                           class="mt-1 w-full px-2 py-2 border-2 border-gray-400 bg-transparent rounded-md">
                </div>
                <button type="submit" class="w-full py-2 bg-[#4D7766] text-white font-semibold rounded-md hover:bg-gray-700 cursor-pointer outline-none transition duration-200">
                    Reset Password
                </button>
            </form>
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="text-red-500 mt-4">@TempData["ErrorMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="text-green-500 mt-4">@TempData["SuccessMessage"]</div>
            }
            <div class="mt-4 text-center">
                <a asp-controller="Account" asp-action="Login" class="text-sm text-[#4D7766] font-bold hover:underline hover:text-gray-700">Back to Log In</a>
            </div>
        </div>
    </div>
</div>
