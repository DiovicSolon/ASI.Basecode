@using ASI.Basecode.Services.ServiceModels
@model UserViewModel
@{
    ViewBag.LoginView = true;
    ViewData["IsLoginPage"] = true;
}
<div class="flex w-full h-screen overflow-hidden">
    <div class="w-1/2 p-8 bg-[#ECE7E1] flex items-center justify-center">
        <div class="w-full max-w-md">
            <h2 class="text-3xl font-black text-[#4D7766] mt-8 mb-6 text-center">Register</h2>
            <form method="post" action="/Account/Register" id="loginForm" class="space-y-4">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700" for="FirstName">First Name</label>
                        <input type="text" id="FirstName" asp-for="FirstName"
                               class="mt-1 block w-full px-2 py-2 border-solid border-2 border-gray-400 bg-transparent rounded-md" />
                        <span asp-validation-for="FirstName" class="text-danger text-sm"></span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700" for="LastName">Last Name</label>
                        <input type="text" id="LastName" asp-for="LastName"
                               class="mt-1 block w-full px-2 py-2 border-solid border-2 border-gray-400 bg-transparent rounded-md" />
                        <span asp-validation-for="LastName" class="text-danger text-sm"></span>
                    </div>
                </div>
                <div>
                    <label for="Email" class="block text-sm font-medium text-gray-700">Email Address</label>
                    <input asp-for="Email" type="email" id="Email" name="Email" class="mt-1 block w-full px-2 py-2 border-solid border-2 border-gray-400 bg-transparent rounded-md">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div>
                    <label for="UserName" class="block text-sm font-medium text-gray-700">Username</label>
                    <input asp-for="UserName" type="text" id="UserName" name="UserName" class="mt-1 block w-full px-2 py-2 border-solid border-2 border-gray-400 bg-transparent rounded-md">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div>
                    <label for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="Password" type="Password" id="Password" name="Password" class="mt-1 block w-full bg-transparent px-2 py-2 border-solid border-2 border-gray-400 rounded-md">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="Password" id="ConfirmPassword" name="ConfirmPassword" class="mt-1 block w-full bg-transparent px-2 py-2 border-solid border-2 border-gray-400 rounded-md">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="w-full py-2 bg-[#4D7766] text-white font-semibold rounded-md hover:bg-gray-700 cursor-pointer outline-non transition duration-200">Register</button>
            </form>
            <div class="border-b-2 border-gray-400 mt-12 mb-2 mx-2"></div>
            <div class="mt-4 text-center">
                <span class="text-sm text-black">Already have an account? </span>
                <a asp-controller="Account" asp-action="Login" class="text-sm text-[#4D7766] font-bold hover:underline hover:text-gray-700">Log In</a>
            </div>
        </div>
    </div>
    <div class="w-1/2 bg-[#4D7766] p-8 flex items-center justify-center">
        <img src="~/images/logo2.png"
             class="h-auto w-auto"
             alt="logo">
    </div>
</div>

@section scripts {
    <script>

        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            toastr.success(successMessage);
        }
    </script>
}